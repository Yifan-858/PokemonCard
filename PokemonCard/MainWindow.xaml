<Window x:Class="PokemonCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCard"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Window.Background>
        <RadialGradientBrush Center="0.5,0.5" RadiusX="1" RadiusY="0.9">
            <GradientStop Color="White" Offset="0.3"/>
            <GradientStop Color="Black" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid Margin="12">
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                <GradientStop Color="#e2a9c9" Offset="0"/>
                <GradientStop Color="#9a61a9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!--Header-->
            <RowDefinition Height="2*"/> <!--Image-->
            <RowDefinition Height="Auto"/> <!--SubInfo-->
            <RowDefinition Height="*"/> <!--Move 1-->
            <RowDefinition Height="*"/> <!--Move 2-->
            <RowDefinition Height="Auto"/> <!--Weak/resist/retreat-->
            <RowDefinition Height="Auto"/> <!--Footer-->
        </Grid.RowDefinitions>
        
        <!--Header-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="9,0,6,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/> <!--Name-->
                <ColumnDefinition Width="*"/> <!--Space-->
                <ColumnDefinition Width="auto"/> <!--HP-->
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/><!--icon-->
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"  Padding="6,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="DarkGray" Offset="0"/>
                        <GradientStop Color="White" Offset="0.5"/>
                        <GradientStop Color="DarkGray" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="STAGE 1" TextAlignment="Center" FontSize="8" VerticalAlignment="Center"/>
            </Border>
            
            <!--Name-->
            <Border Grid.Column="1" Padding="10,0,30,0" CornerRadius="0,0,50,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#e2a9c9" Offset="0"/>
                        <GradientStop Color="#9f6aa9" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock x:Name="NameTextBlock" Text="Kadabra" FontSize="18" FontFamily="Arial" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <!--Empty-->
            <Border Grid.Column="2" >
                <Button Content="Choose Pokemon" FontSize="14" Click="OpenSelectionWindowClick"/>
            </Border>
            <Border Grid.Column="3">
                <TextBlock x:Name="HpTitleBlock" Text="HP" FontWeight="Bold" FontSize="9" Padding="0,0,0,9" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            </Border>
            <Border Grid.Column="4" Padding="4">
                <TextBlock  x:Name="HpValueBlock"  Text="80" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <Border Grid.Column="5">
                <Image x:Name="PokemonTypeIcon" Source="/Assets/typeicon.png" Width="22"/>
            </Border>
        </Grid>
        
        <!--Image-->
        <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="9,0" BorderBrush="LightGray" BorderThickness="2">
            <Image x:Name="ImageBlock" Source="/Assets/kadabra.png" Width="430"/>
        </Border>
        
        <!--SubInfo-->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Margin="2,0" CornerRadius="15,0,15,0" BorderBrush="LightGray" BorderThickness="2" >
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="DarkGray" Offset="0" />
                    <GradientStop Color="White" Offset="0.5"/>
                    <GradientStop Color="DarkGray" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock x:Name="SubInfoTextBlock" Text="NO. 0064 Psi Pokemon HT: WT:" TextAlignment="Center"/>
        </Border>
        
        <!--Move 1-->
        <Grid Grid.Row="3" Grid.ColumnSpan="3" Margin="6,50,6,6">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Margin="2,0" Padding="4,0" >
                <Image x:Name="Move1Icon" Source="/Assets/typeicon.png" Width="22"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="1" Margin="2,0" Padding="4,0">
                <TextBlock x:Name="Move1NameTextBlock" Text="Teleportation Attack" FontFamily="Arial" FontWeight="Bold" FontSize="15" TextAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="2" Margin="2,0" Padding="4,0">
                <TextBlock x:Name="Move1DMGBlock" Text="30" FontFamily="Arial" FontWeight="Bold" FontSize="18"  TextAlignment="Center"/>
            </Border>

            <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="2,0" Padding="4,0">
                <TextBlock x:Name="Move1DesciptionBlock" Text="Switch this Pokemon with 1 of your Benched Pokemon." TextWrapping="Wrap"/>
            </Border>
        </Grid>
        
        <!--Move 2-->
        <Grid Grid.Row="4" Grid.ColumnSpan="3" Margin="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Margin="2,0" Padding="4,0" >
                <Image x:Name="Move2Icon" Source="/Assets/typeicon.png" Width="22"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="1" Margin="2,0" Padding="4,0" >
                <TextBlock x:Name="Move2NameBlock" Text="Psychic" FontFamily="Arial" FontWeight="Bold" FontSize="15" TextAlignment="Center"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="2" Margin="2,0" Padding="4,0" >
                <TextBlock x:Name="Move2DMGBlock" Text="30" FontFamily="Arial" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
            </Border>

            <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="2,0" Padding="4,0" >
                <TextBlock x:Name="Move2DescriptionBlock" Text="Attack Description" TextWrapping="Wrap"/>
            </Border>
        </Grid>
        
        <!--Weakness/resistance/retreat-->
        <Grid Grid.Row="5" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="6,6,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,2,0,2">
                    <TextBlock x:Name="WeaknessTitle" Text="weakness" Padding="5,2"  FontFamily="Arial" FontSize="10" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="0,2,0,2">
                    <Image x:Name="WeaknessIcon" Source="/Assets/darktype.png" Width="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="0,2,1,2">
                    <TextBlock x:Name="WeaknessValue" Text=" x 2" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Arial" FontSize="10" FontWeight="Bold"/>
                </Border>
            </Grid>

            <Grid Grid.Column="1" Margin="0,6,6,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,2,0,2">
                    <TextBlock x:Name="ResistanceTitle" Text="resistance" Padding="5,2" FontFamily="Arial" FontSize="10" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="0,2,0,2">
                    <Image x:Name="ResistanceIcon" Source="/Assets/fighttype.png" Width="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="0,2,2,2" CornerRadius="0,0,20,0">
                    <TextBlock x:Name="ResistanceValue" Text="-30" Padding="5,0"  VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Arial" FontSize="10" FontWeight="Bold"/>
                </Border>
            </Grid>
            
          
            <Grid Grid.Column="2" Margin="0,6,6,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,2,0,2">
                    <TextBlock x:Name="RetreatTitle" Text="retreat" Padding="5,2" FontFamily="Arial" FontSize="10" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="0,2,0,2">
                    <Image x:Name="RetreatIcon" Source="/Assets/normaltype.png" Width="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="0,2,0,2">
                    <TextBlock x:Name="RetreatValue" Text="" Padding="5,0"  VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Arial" FontSize="10" FontWeight="Bold"/>
                </Border>
            </Grid>
        </Grid>
        <!--Footer-->
        <Grid Grid.Row="6" Margin="6,0,6,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="2">
                <TextBlock x:Name="RarityText" Text="064/165" FontFamily="Arial" FontSize="9" FontWeight="Bold" FontStyle="Italic"/>
            </Border>
            <Border Grid.Column="1" Margin="2,2,90,2">
                <TextBlock x:Name="RarityIcon" Text="◆" FontFamily="Arial" FontSize="9" FontWeight="Bold" />
            </Border>
            <Border Grid.Column="2" HorizontalAlignment="Right">
                <TextBlock x:Name="PokemonDescription" Text="known for its immense telekinetic powers and psychic energy stored in a star on its forehead" FontFamily="Arial" FontSize="9" TextWrapping="Wrap" MaxWidth="220" TextAlignment="Right"/>
            </Border>
        </Grid>
           
    </Grid>
</Window>
