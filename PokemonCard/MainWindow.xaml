<Window x:Class="PokemonCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCard"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid Margin="20" Background="Beige">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!--Header-->
            <RowDefinition Height="2*"/> <!--Image-->
            <RowDefinition Height="Auto"/> <!--SubInfo-->
            <RowDefinition Height="*"/> <!--Move 1-->
            <RowDefinition Height="*"/> <!--Move 2-->
            <RowDefinition Height="Auto"/> <!--Weak/resist/retreat-->
            <RowDefinition Height="Auto"/> <!--Footer-->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <!--Header-->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Header" HorizontalAlignment="Center"/>
        </Border>
        
        <!--Image-->
        <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <Rectangle Width="200" Height="200" Fill="DarkGray" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        
        <!--SubInfo-->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="SubInfo" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        
        <!--Move 1-->
        <Border Grid.Row="3" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Move 1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        
        <!--Move 2-->
        <Border Grid.Row="4" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Move 2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        
        <!--Weak/Resist/Retreat-->
        <Border Grid.Row="5" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Weak/Resist/Retreat" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        
        <!--Footer-->
        <Border Grid.Row="6" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Footer" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

    </Grid>
</Window>
